doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body
        h1 Lorem ipsum dolor sit amet consectetur adipisicing elit. Magni, maiores.
        ul
            -let arr = ['lorem', 'ipsum', 'dolor', 'sit', 'amet'];
            each element,i in arr
                li(style="font-size: "+(i+1)*10+"px") #{element} N - #{i}